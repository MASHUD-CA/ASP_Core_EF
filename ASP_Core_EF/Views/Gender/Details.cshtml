@model ASP_Core_EF.Models.Gender

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gender</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GenderName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GenderName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Students)
        </dt>
        <dd class="col-sm-10">
            @* List / Info of Students Added here*@



            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Student First Name
                        </th>
                        <th>
                            Student Last Name
                        </th>
                        <th>
                            Student DOB
                        </th>
                        <th>
                           Registration Date
                        </th>
                        <th>
                           Status
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Students)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DOB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistrationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                          
                        </tr>
                    }
                </tbody>
            </table>





        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GenderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
